@{
    ViewData["Title"] = "Produtos";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <!-- Template Main JS File -->
    <script src="/js/main.js"></script>

    <script src="/lib/jquery-mask-plugin-master/dist/jquery.mask.min.js"></script>
    <script>
        $('.cep').mask('00000-000', { reverse: true });
    </script>


    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .produto-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .produto-img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .produto-descricao {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .produto-valor {
            font-size: 8px;
        }

        .botao-preto {
            display: inline-block;
            padding: 10px 20px;
            background-color: #000;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

    </style>
</head>

<section class="container profile height-min" ng-app="myApp" ng-controller="HomeController"
         ng-init="loadProducts('@ViewBag.Id')">
    <script type="text/ng-template" id="alert.html">
        <div ng-transclude></div>
    </script>
    <div class="spinerBackground">
        <div class="spinerStyle" id="loading-bar-container">

        </div>
    </div>
    <div id="popupContainer">
    </div>
    <div ng-repeat="marca in list.marcas">
        <span>{{marca.name}}</span>
    </div>
    <div class="text-center mt-5"
         ng-show="list.products == null || list.products.length == 0">
        <span>Nenhum produto foi encontrado, tente outro tipo de produto.</span>
    </div>
    <div class="person-list">
        <div class="person-item" ng-repeat="item in list.products"
             ng-click="visitProduct(item.id)">
            <img ng-src="\{{ item.image }}" alt="{{ item.name }}" class="person-image">
            <div class="person-content">
                <div>
                    <h2 class="person-name">
                        {{ item.name }}
                    </h2>
                    <span class="person-description">{{item.value | currency:"R$"}}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row" ng-show="list.products != null && list.products.length > 0">
        <div class="col-md-12" style="text-align:center">
            <ul uib-pagination ng-model="filter.PageNumber" total-items="entity.totalItems"
                items-per-page="9" max-size="5" previous-text="<<" next-text=">>" rotate="true"
                ng-change="loadProducts('@ViewBag.Id')" class="pagination-sm justify-content-center"></ul>
        </div>
    </div>

</section>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

<script src="/lib/swiper/swiper-bundle.min.js"></script>

<script>

    var swiper = new Swiper(".mySwiper", {
        loop: true,
        grabCursor: true,
        spaceBetween: 30,
        autoplay: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
            dynamicBullets: true,
        },
        breakpoints: {
            976: {
                slidesPerView: 3,
            },
            568: {
                slidesPerView: 2,
            },
        }
    });

    var swiperCategory = new Swiper(".container-categorias", {
        grabCursor: true,
        freeMode: true,
        pagination: {
            el: ".swiper-pagination",
            dynamicBullets: true,
            clickable: true,
        },
        navigation: {
            nextEl: ".button-prev",
            prevEl: ".button-next",
        },
        breakpoints: {
            1150: {
                slidesPerView: 9,
            },
            650: {
                slidesPerView: 5,
            }
        }
    });

    // Adiciona o comportamento de zoom ao elemento de imagem
    document.getElementById('zoomable-image').addEventListener('mouseenter', function () {
        this.style.width = '300px'; // Largura aumentada ao passar o mouse
    });

    document.getElementById('zoomable-image').addEventListener('mouseleave', function () {
        this.style.width = '200px'; // Largura inicial ao retirar o mouse
    });

</script>