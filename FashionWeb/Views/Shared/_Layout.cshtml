    <script>
        function addToHome() {
            // Detecção do agente do usuário para iOS
            var isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;

            // Detecção do agente do usuário para Android
            var isAndroid = /Android/.test(navigator.userAgent);

            $('#installApp').modal('show');
            var contentInstallApp = document.querySelector('.contentBaixarApp');

            if (isIOS) {
                if (window.navigator.standalone === true) {
                    contentInstallApp.innerHTML = '<p>Aplicativo já está na tela principal do seu aparelho.</p>';
                }
                else if (window.navigator.standalone !== undefined) {
                    contentInstallApp.innerHTML = '<span> Para instalar o aplicativo no <img src="/img/appleLogo.png" width="15">, basta tocar em <img src="/img/addApple.jpeg" width="25"> e depois em Adicionar à Tela de Início.</span><br /><br />';
                    contentInstallApp.innerHTML += '<div style="text-align:center;"><img src="/img/tutorialApple.jpeg" width="250"><br /><br /><img src="/img/tutorialApple2.jpg" width="250"></div>';
                }
                else {
                    contentInstallApp.innerHTML = '<p>Infelizmente, a opção de adicionar à tela inicial não está disponível neste dispositivo ou navegador.</p>';
                }
            }
            else if (isAndroid) {
                if (window.matchMedia('(display-mode: standalone)').matches) {
                    contentInstallApp.innerHTML = '<p>Aplicativo já está na tela principal do seu aparelho.</p>';
                }
                else {
                    contentInstallApp.innerHTML = '<span>Toque no ícone do menu, representado por três pontos verticais ou pelo ícone de configurações.</span><br /><br /><span>No menu suspenso, selecione Adicionar à tela inicial ou Adicionar app.</span><br /><br /><span>Você verá uma tela de confirmação com o nome do aplicativo. Toque em Adicionar ou OK.</span><br /><br /><span>O ícone do aplicativo será adicionado à sua tela inicial para facilitar o acesso.</span><br />';
                }
            }
            else {
                contentInstallApp.innerHTML = '<p>Infelizmente, a opção de adicionar à tela inicial não está disponível neste dispositivo ou navegador.</p>'
            }
        }
    </script>

